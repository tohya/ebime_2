<% provide(:title, "log in") %>
<h1>ログイン</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :id %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %> 

      <%= f.submit "ログイン(勤怠)", { name: "kintai_button",  class: "btn btn-large btn-primary" } %>
      <%= f.submit "ログイン(実績)", { name: "jisseki_button", class: "btn btn-large btn-primary" } %>
    <% end %>

  </div>
</div>

